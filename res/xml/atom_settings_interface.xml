<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/interface_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

   <Preference
         android:key="batterybar_settings"
         android:title="@string/battery_bar_title"
         android:summary="@string/battery_bar_summary"
         android:fragment="com.atom.settings.fragments.BatterybarSettings" />

   <Preference
         android:key="theme_room"
         android:title="@string/themeroom_title"
         android:summary="@string/themeroom_summary"
         android:fragment="com.atom.settings.fragments.ThemeRoom" />

   <Preference
         android:key="ambient_light_settings"
         android:title="@string/ambient_light_settings_title"
         android:summary="@string/pulse_ambient_light_summary"
         android:fragment="com.atom.settings.fragments.AmbientLight" />


    <Preference 
          android:key="lockscreen_style" 
          android:title="@string/lockscreen_style_title"
          android:summary="@string/lockscreen_style_summary"   
          android:fragment="com.atom.settings.fragments.LockscreenStyle" />

    <com.atom.settings.preferences.SystemSettingSwitchPreference
        android:key="toast_icon"
        android:title="@string/toast_icon_title"
        android:summary="@string/toast_icon_summary"
        android:defaultValue="false" />

   
    <PreferenceCategory
        android:key="qs_theme_category"
        android:title="@string/qs_theme_category">

        <com.atom.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_panel_bg_alpha"
            android:title="@string/qs_panel_alpha_title"
            android:max="255"
            settings:min="100"
            settings:interval="5"
            android:defaultValue="255" />

    </PreferenceCategory>

        <com.atom.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_blur"
            android:title="@string/blur_quicksettings"
            android:summary="@string/blur_quicksettings_subtitle"
            android:defaultValue="true" />
    
       <com.atom.settings.preferences.SystemSettingSeekBarPreference
            android:key="qs_blur_alpha"
            android:title="@string/qs_blur_alpha_title"
            android:summary="@string/qs_blur_alpha_summary"
            android:max="100"
            settings:min="1"
            android:defaultValue="100"
            android:dependency="qs_blur" />

      <com.atom.settings.preferences.SystemSettingSwitchPreference
        android:key="hide_smart_replies"
        android:title="@string/hide_smart_replies_title"
        android:summary="@string/hide_smart_replies_summary"
        android:defaultValue="false"/>

      <com.atom.settings.preferences.SystemSettingSwitchPreference
            android:key="qs_datausage"
            android:title="@string/qs_datausage_title"
            android:summary="@string/qs_datausage_subtitle"
            android:defaultValue="false" />

      <Preference
           android:fragment="com.atom.settings.fragments.SmartChargingSettings"
           android:key="smart_charging_key"
           android:title="@string/smart_charging_title"
           android:summary="@string/smart_charging_summary" />


   <PreferenceCategory
         android:key="themes_category"
         android:title="@string/themes_hub_title">

   <Preference
         android:key="theme_hub"
         android:title="@string/themes_hub_title"
         android:summary="@string/themes_hub_summary"
         android:fragment="com.atom.settings.fragments.ThemesHub" />

   </PreferenceCategory>

     <Preference
            android:key="rounded_corners" 
            android:title="@string/corners_category_title"
            android:summary="@string/corners_category_summary"
            android:fragment="com.atom.settings.fragments.RoundedCornersSettings" />

 </PreferenceScreen>

