<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/footer_text_title"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <com.atom.settings.preferences.SystemSettingSwitchPreference
            android:key="atom_footer_text_show"
            android:title="@string/atom_footer_text_show_title"
            android:defaultValue="false" />

    <com.atom.settings.preferences.SystemSettingEditTextPreference
            android:key="atom_footer_text_string"
            android:title="@string/atom_footer_text_string_title"
            android:summary="@string/atom_footer_text_string_summary"
            android:dependency="atom_footer_text_show"
            android:defaultValue="#StayAtomic" />

</PreferenceScreen>
